<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>

        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>

  <% end %>

  <div class="container-fluid col-7 bg-info p-5 rounded-5">
  <form>
       <div class="row">
          <div class="form-group col-md-5">
             <%= form.label 'First Name' %><br>
             <%= form.text_field :FirstName, class:"form-control"%><br>
             <% @user.errors.full_messages_for(:FirstName).each do |message| %>
               <div><%= message %></div>
             <% end %>
          </div>
          <div class="form-group col-md-5">
             <%= form.label 'Last Name' %><br>
             <%= form.text_field :LastName, class:"form-control"%><br>
          </div>
       </div>

        <div class="form-group col-md-5">
            <%= form.label 'Mobile No.' %><br>
            <%= form.text_field :Mobile, class:"form-control" %><br>

            <%= form.label 'Email id' %><br>
            <%= form.text_field :Email, class:"form-control"%><br>
        </div>

        <div class="form-group col-md-5">
            <%= form.label 'Profile Image'%><br>
            <%= form.file_field :avatar, class:"form-control lg btn btn-outline-info" %><br><br>
        </div>

        <div style="text-align:center">
           <%= form.submit class:"btn btn-primary col-5" %>
        </div>
  </div>
<% end %>
</form>
